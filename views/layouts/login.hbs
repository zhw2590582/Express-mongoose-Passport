<!DOCTYPE html>
<html lang="zh-CN">
<head>
	<title>{{base.webTitle}}</title>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0,minimal-ui">
	<meta name="keywords" content="{{base.keywords}}">
	<meta name="description" content="{{base.description}}">
	<link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />
	<link rel="stylesheet" href="/css/vendor{{hash}}.css">
	<link rel="stylesheet" href="/css/{{dir}}/index{{hash}}.css">
</head>
<body>
	<section>
		<section class="container warning-info">
			<div class="columns">
				{{#if success_msg}}
					<div class="column col-12 text-center">{{success_msg}}</div>
				{{/if}}
				{{#if error_msg}}
					<div class="column col-12 text-center">{{error_msg}}</div>
				{{/if}}
				{{#if error}}
					<div class="column col-12 text-center">{{error}}</div>
				{{/if}}
      </div>
		</section>
		<section class="container">
			{{{body}}}
		</section>
	</section>
	<script src="/js/vendor{{hash}}.js"></script>
	<script src="/js/{{dir}}/index{{hash}}.js"></script>
</body>
</html>
