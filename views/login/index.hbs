<h3>登陆</h3>
<form id="login-form" method="post" action="/users/login" data-parsley-validate class="form-horizontal">
    <div class="form-group">
        <div class="col-3">
            <label class="form-label" for="login-name">用户名</label>
        </div>
        <div class="col-9">
            <input class="form-input" type="text" name="username" id="login-name" placeholder="用户名" required=""/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-3">
            <label class="form-label" for="login-password">密码</label>
        </div>
        <div class="col-9">
            <input class="form-input" type="password" name="password" id="login-password" placeholder="密码" required=""/>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>
