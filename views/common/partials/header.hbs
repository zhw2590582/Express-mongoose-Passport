<!DOCTYPE html>
<html lang="zh-CN">
<head>
	<title>{{subTitle}} - {{base.webTitle}}</title>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0,minimal-ui">
	<meta name="keywords" content="{{base.keywords}}">
	<meta name="description" content="{{base.description}}">
	<link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />
	<link rel="stylesheet" href="/css/vendor{{hash}}.css">
	<link rel="stylesheet" href="/css/{{dir}}/index{{hash}}.css">
</head>
<body>
	<section class="main">
		<section class="container warning-info">
			<div class="columns">
				{{#if success_msg}}
					<div class="toast toast-success">
	            <button class="btn btn-clear float-right"></button>
	            <i class="icon icon-error_outline"></i> {{success_msg}}
	        </div>
				{{/if}}
				{{#if error_msg}}
					<div class="toast toast-danger">
							<button class="btn btn-clear float-right"></button>
							<i class="icon icon-error_outline"></i> {{error_msg}}
					</div>
				{{/if}}
				{{#if error}}
					<div class="toast toast-danger">
							<button class="btn btn-clear float-right"></button>
							<i class="icon icon-error_outline"></i> {{error}}
					</div>
				{{/if}}
				{{#if errors}}
		      {{#each errors}}
						<div class="toast toast-danger">
								<button class="btn btn-clear float-right"></button>
								<i class="icon icon-error_outline"></i> {{msg}}
						</div>
		      {{/each}}
				{{/if}}
      </div>
		</section>
